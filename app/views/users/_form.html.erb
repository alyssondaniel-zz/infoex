<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :admission_date, as: :string, input_html: {class: "datepicker", value: (f.object.admission_date.present? ? f.object.admission_date.strftime('%d/%m/%Y') : Date.today.strftime('%d/%m/%Y'))} %>
    <%= f.input :resignation_date, as: :string, input_html: {class: "datepicker", value: (f.object.resignation_date.strftime('%d/%m/%Y') if f.object.resignation_date.present? )} %>
    <%= f.association :roles %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
